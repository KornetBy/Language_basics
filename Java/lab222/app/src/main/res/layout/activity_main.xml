<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFEBEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/inputTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#E1BEE7"
        android:textColor="#000000"
        android:textSize="24sp"
        android:gravity="end|center_vertical"
        android:padding="8dp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C8E6C9"
    android:textColor="#000000"
    android:textSize="20sp"
    android:gravity="end|center_vertical"
    android:padding="8dp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="8"
        android:padding="8dp">

        <!-- Верхний ряд управления -->
        <Button android:id="@+id/btnAC" android:text="Сброс" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnBackspace" android:text="←" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnPercent" android:text="%" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnDivide" android:text="÷" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>

        <!-- Цифры и операции -->
        <Button android:id="@+id/btn7" android:text="7" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn8" android:text="8" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn9" android:text="9" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnMultiply" android:text="×" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>

        <Button android:id="@+id/btn4" android:text="4" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn5" android:text="5" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn6" android:text="6" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnMinus" android:text="-" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>

        <Button android:id="@+id/btn1" android:text="1" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn2" android:text="2" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn3" android:text="3" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnPlus" android:text="+" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>

        <Button android:id="@+id/btn0" android:text="0" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnDot" android:text="." android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnEquals" android:text="=" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"/>

        <!-- Доп. функции -->

    </GridLayout>
</LinearLayout>
